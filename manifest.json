{
  "manifest_version": 3,
  "name": "Cute Wallpapers - New Tab",
  "version": "1.0.0",
  "description": "Display beautiful cute wallpapers from Unsplash and inspirational quotes on every new tab",
  
  "permissions": [
    "storage",
    "contextMenus",
    "notifications"
  ],
  
  "optional_permissions": [
    "downloads"
  ],
  
  "host_permissions": [
    "https://api.unsplash.com/*",
    "https://api.pexels.com/*",
    "https://type.fit/*"
  ],
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "background": {
    "service_worker": "./background.js"
  },
  
  "options_page": "options.html",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cute Wallpapers Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}